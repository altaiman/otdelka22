//- includes
include components/independent/index.pug
include components/slider/index.pug
include components/sections/index.pug
include components/form/index.pug
include components/modal/index.pug

//- end includes

//- variables page 
- 
	pageSettings = {
		title: 'Главная'
	}
	
//- end variables

doctype html
html(lang=global.lang)
	+head(pageSettings)
	+b.BODY.page
		+header({
			title: pageSettings.title
		})
		
		+e.MAIN.content
			+slider({
				slider: 'banner'
			})
			
			+b.SECTION.section._full(style="background-image: url(https://www.beloe-oblako.ru/upload/uf/a3b/a3bef803c0344b6c88be24a241ef43dd.jpg)")
				+e.A.link(href="ceiling.html")
				+e.container.container
					+e.block
						+b.H2.title._stl-2._hover Натяжные потолки
						+b.H2.title._stl-2 от 69 руб./м2
						
			+b.SECTION.section._full(style="background-image: url(https://mrsremont.ru/images/slides/slide04.jpg)")
				+e.A.link(href="appartament.html")
				+e.container.container
					+e.block._right
						+b.H2.title._stl-2._hover Ремонт квартир
						+b.H2.title._stl-2 от 1 200 руб./м2
						
			+b.SECTION.section._full(style="background-image: url(https://servex.su/upload/iblock/d0a/d0a7974bbac420e55e0a1510d6ee3332.jpg)")
				+e.A.link(href="#")
				+e.container.container
					+e.block
						+b.H2.title._stl-2._hover Клининг
						+b.H2.title._stl-2 от 28 руб./м2
			
			//- +feautures
			//- +prices
			//- +examples
			//- +reviews
			//- 
			+b.SECTION.section
				+e.container.container
					+formCallFooter
			
		+e.modals
			+modalWork
			+modalAction
			+modalCallback
			
		+footer
		
		+scripts

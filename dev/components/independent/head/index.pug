include ../../global.pug

mixin head(data)
  meta(charset="UTF-8")
  meta(name="description" content=global.description)
  title= global.title + ' ' + global.separator + ' ' + data.title
  link(rel="stylesheet" href="css/style.css")
  link(rel="icon" type="image/x-icon" href="favicon.ico")
  link(href="https://fonts.googleapis.com/css?family=Ubuntu&display=swap" rel="stylesheet")
  link(href="https://fonts.googleapis.com/css?family=Russo+One&display=swap" rel="stylesheet")
  link(href="https://fonts.googleapis.com/css?family=Exo+2:900i&display=swap&subset=cyrillic" rel="stylesheet")
  - if (global.template.adaptive)
    meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1")
  - else
    meta(name="viewport" content="width="+global.template.width+", initial-scale=1, maximum-scale=1")
